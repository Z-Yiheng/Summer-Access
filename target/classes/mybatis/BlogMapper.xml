<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.access.mapper.BlogMapper">

<!--新增-->
    <insert id="saveBlog" parameterType="com.demo.access.pojo.Blog">
        INSERT INTO my_blog (id,first_picture,publish_time,title,views,brief_content,detail_content,published)
        VALUES (#{id},#{first_picture},#{publish_time},#{title},#{views},#{brief_content},#{detail_content},#{published})
    </insert>

    <delete id="deleteBlog" parameterType="int">
        DELETE FROM my_blog WHERE id = #{id}
    </delete>

</mapper>